<div class="auth-page">

    <div class="auth-container">
        <h1 class="auth-logo">Marketplace Industrial</h1>

        <div class="auth-box">
            <h2 class="auth-box__title">Acesse sua Conta</h2>

            <form action="/auth/login" method="POST">
                
                <!-- Email -->
                <div class="form-group">
                    <label for="email">E-mail</label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        class="form-control"
                        placeholder="seu@email.com" 
                        required
                        autofocus
                    >
                </div>

                <!-- Senha -->
                <div class="form-group">
                    <label for="password">Senha</label>
                    <input 
                        type="password" 
                        id="password" 
                        name="password" 
                        class="form-control"
                        placeholder="********" 
                        required
                    >
                </div>

                <!-- Opções do Formulário -->
                <div class="form-options">
                    <label class="form-check">
                        <input type="checkbox" name="remember">
                        <span>Lembrar-me</span>
                    </label>
                    <a href="/auth/forgot-password">Esqueceu a senha?</a>
                </div>

                <!-- Botão de Envio -->
                <button type="submit" class="btn btn--primary btn--full-width">
                    Entrar
                </button>
            </form>

            <div class="auth-switch-link">
                <p>Ainda não tem uma conta? <a href="/auth/register">Cadastre-se gratuitamente</a></p>
            </div>
        </div>
    </div>
</div>