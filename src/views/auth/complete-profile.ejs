<div class="auth-page">

    <div class="auth-container" style="max-width: 700px;"> 
        <h1 class="auth-logo">Marketplace Industrial</h1>

        <div class="auth-box">
            <h2 class="auth-box__title">Complete o Cadastro da sua Empresa</h2>
            <p style="text-align: center; margin-top: -1.5rem; margin-bottom: 2rem; color: var(--color-text-muted );">
                Preencha os dados abaixo para começar a vender na plataforma.
            </p>

            <!-- Exibir mensagens de erro, se houver -->
            <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
                <div class="alert alert--error"><%= error_msg %></div>
            <% } %>

            <form action="/auth/complete-profile" method="POST">
                
                <!-- Razão Social e Nome Fantasia -->
                <div class="form-row">
                    <div class="form-group">
                        <label for="razaoSocial">Razão Social</label>
                        <input type="text" id="razaoSocial" name="razaoSocial" class="form-control" placeholder="Nome oficial da empresa" required>
                    </div>
                    <div class="form-group">
                        <label for="nomeFantasia">Nome Fantasia (Opcional)</label>
                        <input type="text" id="nomeFantasia" name="nomeFantasia" class="form-control" placeholder="Nome comercial">
                    </div>
                </div>

                <!-- CNPJ e Inscrição Estadual -->
                <div class="form-row">
                    <div class="form-group">
                        <label for="cnpj">CNPJ</label>
                        <input type="text" id="cnpj" name="cnpj" class="form-control" placeholder="00.000.000/0001-00" required>
                    </div>
                    <div class="form-group">
                        <label for="inscricaoEstadual">Inscrição Estadual (Opcional)</label>
                        <input type="text" id="inscricaoEstadual" name="inscricaoEstadual" class="form-control">
                    </div>
                </div>

                <!-- Contato da Empresa -->
                <div class="form-row">
                    <div class="form-group">
                        <label for="companyPhone">Telefone Comercial</label>
                        <input type="tel" id="companyPhone" name="phone" class="form-control" placeholder="(11) 2345-6789" required>
                    </div>
                    <div class="form-group">
                        <label for="companyEmail">E-mail de Contato</label>
                        <input type="email" id="companyEmail" name="email" class="form-control" placeholder="contato@suaempresa.com" required>
                    </div>
                </div>

                <!-- Endereço - CEP e Rua -->
                <div class="form-row">
                    <div class="form-group" style="flex-basis: 30%;">
                        <label for="cep">CEP</label>
                        <input type="text" id="cep" name="cep" class="form-control" placeholder="00000-000" required>
                    </div>
                    <div class="form-group" style="flex-basis: 70%;">
                        <label for="street">Rua / Logradouro</label>
                        <input type="text" id="street" name="street" class="form-control" required>
                    </div>
                </div>

                <!-- Endereço - Número, Complemento e Bairro -->
                <div class="form-row">
                    <div class="form-group" style="flex-basis: 25%;">
                        <label for="number">Número</label>
                        <input type="text" id="number" name="number" class="form-control" required>
                    </div>
                    <div class="form-group" style="flex-basis: 35%;">
                        <label for="complement">Complemento</label>
                        <input type="text" id="complement" name="complement" class="form-control">
                    </div>
                    <div class="form-group" style="flex-basis: 40%;">
                        <label for="neighborhood">Bairro</label>
                        <input type="text" id="neighborhood" name="neighborhood" class="form-control" required>
                    </div>
                </div>

                <!-- Endereço - Cidade e Estado -->
                <div class="form-row">
                    <div class="form-group" style="flex-basis: 70%;">
                        <label for="city">Cidade</label>
                        <input type="text" id="city" name="city" class="form-control" required>
                    </div>
                    <div class="form-group" style="flex-basis: 30%;">
                        <label for="state">Estado (UF)</label>
                        <input type="text" id="state" name="state" class="form-control" maxlength="2" required>
                    </div>
                </div>

                <!-- Botão de Envio -->
                <button type="submit" class="btn btn--primary btn--full-width" style="margin-top: 1rem;">
                    Salvar e Continuar
                </button>
            </form>
        </div>
    </div>
</div>

<script src="/js/autocep.js"></script>