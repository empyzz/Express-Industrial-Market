<div class="auth-page">

    <div class="auth-container">
        <h1 class="auth-logo">Marketplace Industrial</h1>

        <div class="auth-box">
            <h2 class="auth-box__title">Crie sua Conta</h2>

            <form action="/auth/register" method="POST" id="registerForm">
                
                <!-- Tipo de Conta -->
                <div class="form-group">
                    <label>Qual seu objetivo na plataforma?</label>
                    <div class="user-type-group">
                        <input type="radio" id="typeBuyer" name="userType" value="BUYER" required checked>
                        <label for="typeBuyer">Sou Comprador</label>

                        <input type="radio" id="typeSupplier" name="userType" value="SUPPLIER" required>
                        <label for="typeSupplier">Sou Fornecedor</label>
                    </div>
                </div>

                <!-- Nome Completo -->
                <div class="form-group">
                    <label for="name">Nome Completo</label>
                    <input 
                        type="text" 
                        id="name" 
                        name="name" 
                        class="form-control"
                        placeholder="Seu nome completo" 
                        required
                    >
                </div>

                <!-- Email -->
                <div class="form-group">
                    <label for="email">Seu e-mail</label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        class="form-control"
                        placeholder="exemplo@email.com" 
                        required
                    >
                </div>

                <!-- Telefone -->
                <div class="form-group">
                    <label for="phone">Telefone / WhatsApp</label>
                    <input 
                        type="tel" 
                        id="phone" 
                        name="phone"
                        class="form-control"
                        placeholder="(11 ) 91234-5678" 
                        required
                    >
                </div>

                <!-- Senha -->
                <div class="form-group">
                    <label for="password">Crie uma senha</label>
                    <input 
                        type="password" 
                        id="password" 
                        name="password" 
                        class="form-control"
                        placeholder="Mínimo de 6 caracteres"
                        minlength="6" 
                        required
                    >
                </div>

                <!-- Confirmar Senha -->
                <div class="form-group">
                    <label for="confirmPassword">Confirme sua senha</label>
                    <input 
                        type="password" 
                        id="confirmPassword" 
                        name="confirmPassword" 
                        class="form-control"
                        placeholder="Digite a senha novamente" 
                        required
                    >
                </div>

                <!-- Termos de Uso -->
                <div class="form-group">
                    <label class="form-check">
                        <input type="checkbox" name="terms" required>
                        <span>
                            Concordo com os <a href="/terms" target="_blank">Termos de Uso</a> 
                            e a <a href="/privacy" target="_blank">Política de Privacidade</a>.
                        </span>
                    </label>
                </div>

                <!-- Botão de Envio -->
                <button type="submit" class="btn btn--primary btn--full-width">
                    Criar minha conta
                </button>
            </form>

            <div class="auth-switch-link">
                <p>Já tem uma conta? <a href="/auth/login">Faça login agora</a></p>
            </div>
        </div>
    </div>
</div>
