<header class="dashboard-header">
    <h1>Avaliar Itens do Pedido #<%= order.orderNumber %></h1>
    <p>Selecione o produto que você deseja avaliar.</p>
</header>

<section class="dashboard-section">
    <div class="table-responsive">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Produto</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                <% order.items.forEach(item => { %>
                    <tr>
                        <td><%= item.productName %></td>
                        <td>
                            <% if (item.review) { %>
                                <span class="text-muted"><i class="fa-solid fa-check"></i> Já Avaliado</span>
                            <% } else { %>
                                <a href="/buyer/order-item/<%= item.id %>/review" class="btn btn--primary btn--small">
                                    Avaliar
                                </a>
                            <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</section>
