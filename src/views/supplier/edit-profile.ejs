<!-- Cabeçalho da Página -->
<header class="dashboard-header">
    <h1>Editar Perfil da Loja</h1>
    <p>Mantenha as informações da sua empresa sempre atualizadas para os compradores.</p>
</header>

<!-- Seção do Formulário -->
<section class="dashboard-section">
    <div class="section-header">
        <h2>Informações da Empresa</h2>
    </div>

    <div style="padding: 1.5rem;">

        <form action="/supplier/profile?_method=PUT" method="POST">
            
            <!-- Razão Social e Nome Fantasia -->
            <div class="form-row">
                <div class="form-group">
                    <label for="razaoSocial">Razão Social</label>
                    <input type="text" id="razaoSocial" name="razaoSocial" class="form-control" value="<%= company.razaoSocial %>" required>
                </div>
                <div class="form-group">
                    <label for="nomeFantasia">Nome Fantasia</label>
                    <input type="text" id="nomeFantasia" name="nomeFantasia" class="form-control" value="<%= company.nomeFantasia || '' %>">
                </div>
            </div>

            <!-- CNPJ e Inscrição Estadual (geralmente não editáveis) -->
            <div class="form-row">
                <div class="form-group">
                    <label>CNPJ</label>
                    <input type="text" class="form-control" value="<%= company.cnpj %>" disabled title="O CNPJ não pode ser alterado.">
                </div>
                <div class="form-group">
                    <label>Inscrição Estadual</label>
                    <input type="text" class="form-control" value="<%= company.inscricaoEstadual || 'Não informado' %>" disabled>
                </div>
            </div>

            <!-- Contato da Empresa -->
            <div class="form-row">
                <div class="form-group">
                    <label for="phone">Telefone Comercial</label>
                    <input type="tel" id="phone" name="phone" class="form-control" value="<%= company.phone %>" required>
                </div>
                <div class="form-group">
                    <label for="email">E-mail de Contato</label>
                    <input type="email" id="email" name="email" class="form-control" value="<%= company.email %>" required>
                </div>
            </div>

            <!-- Website e Descrição -->
            <div class="form-group">
                <label for="website">Website (Opcional)</label>
                <input type="url" id="website" name="website" class="form-control" placeholder="https://suaempresa.com" value="<%= company.website || '' %>">
            </div>
            <div class="form-group">
                <label for="description">Descrição da Empresa</label>
                <textarea id="description" name="description" class="form-control" rows="5" placeholder="Fale sobre sua empresa, seus produtos e diferenciais."><%= company.description || '' %></textarea>
            </div>

            <!-- Imagens de Perfil -->
            <div class="form-row">
                <div class="form-group">
                    <label for="logo">URL do Logo</label>
                    <input type="url" id="logo" name="logo" class="form-control" placeholder="https://link-para-seu-logo.png" value="<%= company.logo || '' %>">
                </div>
                <div class="form-group">
                    <label for="banner">URL do Banner da Página</label>
                    <input type="url" id="banner" name="banner" class="form-control" placeholder="https://link-para-seu-banner.jpg" value="<%= company.banner || '' %>">
                </div>
            </div>

            <div class="form-group">
                <label>Endereço</label>
                <input type="text" class="form-control" value="<%= `${company.address.street}, ${company.address.number} - ${company.address.city}/${company.address.state}` %>" disabled title="Para alterar o endereço, entre em contato com o suporte.">
            </div>

            <div class="form-actions">
                <a href="/supplier/dashboard" class="btn btn--secondary">Cancelar</a>
                <button type="submit" class="btn btn--primary">
                    <i class="fa-solid fa-save"></i> Salvar Alterações
                </button>
            </div>
        </form>
    </div>
</section>
