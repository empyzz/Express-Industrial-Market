    <!-- STATS -->
    <main>
        <!-- Seção Hero -->
        <section class="hero">
            <div class="container">
                <h1 class="hero__title">O Ponto de Encontro da Indústria</h1>
                <p class="hero__subtitle">Encontre tudo o que sua empresa precisa, de peças a equipamentos, com os melhores fornecedores do mercado.</p>
                <a href="/catalog" class="btn btn--secondary btn--large">Explorar Catálogo de Produtos</a>
            </div>
        </section>



        <!-- Seção de Estatísticas -->
        <section class="section">
            <div class="container">
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-card__value"><%= company.length %></div>
                        <p class="stat-card__label">Fornecedores Qualificados</p>
                    </div>
                    <div class="stat-card">
                        <div class="stat-card__value"><%= products.length %></div>
                        <p class="stat-card__label">Produtos Cadastrados</p>
                    </div>
                    <div class="stat-card">
                        <div class="stat-card__value">98%</div>
                        <p class="stat-card__label">Índice de Satisfação</p>
                    </div>
                </div>
            </div>
        </section>


        <!-- Seção de Produtos em Destaque -->
        <section class="section">
            <div class="container">
                <h2 class="section__title">Produtos em Destaque</h2>

                <!-- Verificamos se a lista de produtos não está vazia -->
                <% if (typeof products !== 'undefined' && products.length > 0) { %>
                    <div class="products-grid">
                        
                        <!-- Loop para renderizar cada card de produto -->
                        <% products.forEach(product => { %>
                            <div class="product-card">
                                <a href="/catalog/products/<%= product.id %>" class="product-card__image">
                                    <img src="<%= product.images[0]?.url || 'https://via.placeholder.com/300x220/EBF4FF/808080?text=Produto' %>" alt="<%= product.name %>">
                                </a>
                                <div class="product-card__content">
                                    <h3 class="product-card__name"><%= product.name %></h3>
                                    <p class="product-card__supplier">por <%= product.supplier?.nomeFantasia || 'Fornecedor' %></p>
                                    <div class="product-card__footer">
                                        <span class="product-card__price">R$ <%= product.price.toFixed(2 ).replace('.', ',') %></span>
                                        <a href="catalog/products/<%= product.id %>" class="btn btn--secondary">Ver Mais</a>
                                    </div>
                                </div>
                            </div>
                        <% }) %>

                    </div>
                <% } else { %>
                    <!-- Mensagem exibida se nenhum produto for encontrado -->
                    <div class="empty-state" style="text-align: center; padding: 2rem;">
                        <p>Nenhum produto em destaque no momento.</p>
                    </div>
                <% } %>

                <div class="section__footer">
                    <a href="/catalog" class="btn btn--primary btn--large">Ver Catálogo Completo</a>
                </div>
            </div>
        </section>

    </main>