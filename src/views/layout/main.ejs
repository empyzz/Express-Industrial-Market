<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Marketplace Industrial</title>
    
    <!-- CSS -->
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/auth.css">
    <link rel="stylesheet" href="/css/catalog.css">
    <link rel="stylesheet" href="/css/product-detail.css">
    <link rel="stylesheet" href="/css/profile.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>

    <!-- Header/Navbar -->

    <%- include('../partials/navbar') %>

    <div class="toast-container">
        <% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
            <% success_msg.forEach(msg => { %>
                <div class="alert alert--success">
                    <i class="fas fa-check-circle alert__icon"></i>
                    <div class="alert__content">
                        <p><%= msg %></p>
                    </div>
                    <button class="alert__close" aria-label="Fechar">&times;</button>
                </div>
            <% }) %>
        <% } %>
        
        <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
            <% error_msg.forEach(msg => { %>
                <div class="alert alert--error">
                    <i class="fas fa-exclamation-circle alert__icon"></i>
                    <div class="alert__content">
                        <p><%= msg %></p>
                    </div>
                    <button class="alert__close" aria-label="Fechar" onclick="closeCustomAlert()">&times;</button>
                </div>
            <% }) %>
        <% } %>
    </div>

    <!-- Main Content -->
    <main class="main-content">
        <%- body %>
    </main>

    <!-- Footer -->
    <%- include('../partials/footer') %>



    <script>

        function closeCustomAlert() {
        const modal = document.querySelector('.alert');
        if (modal) {
            modal.remove();
        }
    }

    </script>
</body>
</html>