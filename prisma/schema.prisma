generator client {
  provider = "prisma-client-js"
  output   = "./.prisma/generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String        @id @default(cuid())
  name                 String
  email                String        @unique
  password             String
  userType             UserType
  phone                String?
  avatar               String?       @default("/images/default-avatar.png")
  isActive             Boolean       @default(true)
  emailVerified        Boolean       @default(false)
  lastLogin            DateTime?
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @updatedAt

  // Relacionamentos
  company              Company?
  orders               Order[]
  reviews              Review[]
  favoriteProducts     FavoriteProduct[]
  favoriteSuppliers    FavoriteSupplier[]
  quotationCart        QuotationCart?

  @@map("users")
}

enum UserType {
  BUYER
  SUPPLIER
}

model Company {
  id                String    @id @default(cuid())
  razaoSocial       String
  nomeFantasia      String?
  cnpj              String    @unique
  inscricaoEstadual String?
  phone             String
  email             String
  website           String?
  description       String?   @db.Text
  logo              String?   @default("/images/default-company-logo.png")
  banner            String?
  ratingAverage     Float     @default(0)
  ratingCount       Int       @default(0)
  isActive          Boolean   @default(true)
  isVerified        Boolean   @default(false)
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  // Relacionamentos
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId            String    @unique
  address           Address?
  products          Product[]
  ordersAsSupplier  Order[]
  reviews           Review[]
  favoritedBy       FavoriteSupplier[]

  @@map("companies")
}

model Product {
  id            String    @id @default(cuid())
  name          String
  slug          String    @unique
  description   String    @db.Text
  price         Decimal   @db.Decimal(10, 2)
  stockQuantity Int       @default(0)
  unit          String    @default("un")
  ncm           String?
  isActive      Boolean   @default(true)
  isFeatured    Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relacionamentos
  supplier      Company   @relation(fields: [supplierId], references: [id], onDelete: Cascade)
  supplierId    String
  category      Category  @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  categoryId    String
  images        ProductImage[]
  orderItems    OrderItem[]
  favoritedBy   FavoriteProduct[]
  quotationCartItems QuotationCartItem[]

  @@map("products")
}

model Category {
  id        String    @id @default(cuid())
  name      String    @unique
  slug      String    @unique
  image     String?
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relacionamentos
  products  Product[]

  @@map("categories")
}

model Order {
  id            String        @id @default(cuid())
  orderNumber   String        @unique
  totalAmount   Decimal       @db.Decimal(10, 2)
  paymentMethod PaymentMethod
  paymentStatus PaymentStatus @default(PENDING)
  status        OrderStatus   @default(PENDING)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relacionamentos
  buyer         User          @relation(fields: [buyerId], references: [id])
  buyerId       String
  supplier      Company       @relation(fields: [supplierId], references: [id])
  supplierId    String
  items         OrderItem[]
  review        Review?

  @@map("orders")
}

enum OrderStatus {
  PENDING
  CONFIRMED
  SHIPPED
  DELIVERED
  CANCELLED
}

enum PaymentMethod {
  BOLETO
  CARTAO
  PIX
  TRANSFERENCIA
  A_PRAZO
}

enum PaymentStatus {
  PENDING
  APPROVED
  REJECTED
}

model Review {
  id             String   @id @default(cuid())
  rating         Int      @db.SmallInt
  comment        String   @db.Text
  isApproved     Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relacionamentos
  order          Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId        String   @unique
  buyer          User     @relation(fields: [buyerId], references: [id], onDelete: Cascade)
  buyerId        String
  company        Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId      String

  @@map("reviews")
}


// =================================================================
//                 MODELOS DE SUPORTE E RELACIONAMENTO
// =================================================================

// --- Endereço (Simplificado) ---
model Address {
  id           String  @id @default(cuid())
  street       String
  number       String
  complement   String?
  neighborhood String
  city         String
  state        String
  cep          String

  // Relacionamento 1-para-1 com a Empresa
  company      Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId    String  @unique

  @@map("addresses")
}


model OrderItem {
  id          String  @id @default(cuid())
  productName String
  quantity    Int
  unitPrice   Decimal @db.Decimal(10, 2)

  // Relacionamentos
  order       Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId     String

  product     Product? @relation(fields: [productId], references: [id], onDelete: SetNull)
  productId   String?

  @@map("order_items")
}


// --- Carrinho de Cotações ---
model QuotationCart {
  id      String   @id @default(cuid())
  updatedAt DateTime @updatedAt

  // Relacionamentos
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId  String   @unique
  items   QuotationCartItem[]

  @@map("quotation_carts")
}

model QuotationCartItem {
  id        String  @id @default(cuid())
  quantity  Int     @default(1)

  // Relacionamentos
  cart      QuotationCart @relation(fields: [cartId], references: [id], onDelete: Cascade)
  cartId    String
  product   Product       @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String

  @@unique([cartId, productId])
  @@map("quotation_cart_items")
}

// --- Imagens de Produto ---
model ProductImage {
  id        String  @id @default(cuid())
  url       String
  isPrimary Boolean @default(false)
  order     Int     @default(0)

  // Relacionamentos
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String

  @@map("product_images")
}

// --- Favoritos ---
model FavoriteProduct {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  // Relacionamentos
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String

  @@unique([userId, productId])
  @@map("favorite_products")
}

model FavoriteSupplier {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  // Relacionamentos
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  supplier  Company  @relation(fields: [supplierId], references: [id], onDelete: Cascade)
  supplierId String
  
  @@unique([userId, supplierId])
  @@map("favorite_suppliers")
}

